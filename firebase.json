{
  "firestore": {
    "rules": "rules/firestore.rules"
  },
  "storage": [
    {
      "target": "storage",
      "bucket": "thejunkyard-b1858.appspot.com",
      "rules": "rules/storage.rules"
    }
  ],
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "runtime": "nodejs22"
    }
  ]
}
